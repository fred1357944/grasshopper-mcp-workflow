    TABLE ||--|| TABLE_TOP : contains
    TABLE ||--o{ TABLE_LEG : "contains (4)"

    TABLE_TOP ||--o{ TABLE_LEG : "rests_on"

    TABLE {
        string name "Simple Table v2"
        int leg_count "4"
        float total_height "75.0"
        string design_approach "Center Box + Orient"
    }

    TABLE_TOP {
        string component_type "Center Box"
        float width "120.0"
        float depth "80.0"
        float thickness "5.0"
        float z_position "leg_height + thickness/2"
        string note "桌面中心在4腳中心上方"
    }

    TABLE_LEG {
        string component_type "Center Box"
        float size_x "10.0"
        float size_y "10.0"
        float height "70.0"
        float z_position "height/2"
        string placement "4 corners via Orient"
        string positions "四角落: (+50,+30), (-50,+30), (-50,-30), (+50,-30)"
    }

