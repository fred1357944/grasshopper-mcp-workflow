%% WASP L-Shape Module Aggregation - Part Info
%% Phase 2: 幾何分解
%% 2026-01-24

erDiagram
    L_SHAPE_MODULE {
        string name "LModule"
        float width "1.0 單位寬度"
        float depth "2.0 單位深度"
        float height "0.5 單位高度"
    }

    CONNECTION_FACE_A {
        string type "Type A"
        vector normal "+X 方向"
        point center "側面中心"
    }

    CONNECTION_FACE_B {
        string type "Type B"
        vector normal "+Y 方向"
        point center "前面中心"
    }

    CONNECTION_FACE_C {
        string type "Type A"
        vector normal "-X 方向"
        point center "另一側中心"
    }

    AGGREGATION_RESULT {
        int count "目標 15 個模組"
        string mode "Stochastic"
        int seed "隨機種子"
    }

    L_SHAPE_MODULE ||--o{ CONNECTION_FACE_A : "有"
    L_SHAPE_MODULE ||--o{ CONNECTION_FACE_B : "有"
    L_SHAPE_MODULE ||--o{ CONNECTION_FACE_C : "有"
    L_SHAPE_MODULE }|--|| AGGREGATION_RESULT : "聚集成"

